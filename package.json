{
  "name": "observable-redux-json-api",
  "version": "0.0.8",
  "main": "lib/jsonapi.js",
  "module": "es/jsonapi.js",
  "jsnext:main": "es/jsonapi.js",
  "types": "index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Krister Kari",
    "url": "https://github.com/kristerkari/"
  },
  "files": ["es", "docs", "lib", "src", "README.md", "index.d.ts"],
  "keywords": ["observable", "redux", "json", "api", "jsonapi"],
  "scripts": {
    "prerelease": "yarn build",
    "release": "npmpub",
    "build:es5":
      "rimraf lib && tsc --project config/build-tsconfig.json --outDir lib && BABEL_ENV=es5 babel lib --out-dir lib",
    "build:es2015":
      "rimraf es && tsc --project config/build-tsconfig.json --outDir es && BABEL_ENV=es2015 babel es --out-dir es",
    "build": "yarn build:es5 && yarn build:es2015",
    "tdd": "jest --watch",
    "test": "jest",
    "test:nocache": "jest --no-cache",
    "test:update": "jest -u",
    "lint": "tslint --project tsconfig.json",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^21.1.6",
    "@types/node": "^8.0.53",
    "@types/pluralize": "^0.0.28",
    "babel-cli": "^6.26.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-rename-import": "^2.1.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nock": "^9.1.0",
    "npmpub": "^3.1.0",
    "prettier": "^1.8.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "replace-in-file": "^3.0.0",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.2",
    "rxjs-tslint-rules": "^3.1.1",
    "ts-jest": "^21.2.3",
    "tslib": "^1.8.0",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "lodash": "^4.17.4",
    "lodash-es": "^4.17.4",
    "object-path-immutable": "^0.5.2",
    "pluralize": "^7.0.0",
    "redux-actions": "^2.2.1"
  },
  "peerDependencies": {
    "redux": ">=3.0.0",
    "redux-thunk": ">=1.0.0",
    "rxjs": ">=5.0.0"
  },
  "lint-staged": {
    "**/*.json": ["prettier --write", "git add"],
    "**/*.ts": [
      "tslint --project tsconfig.json --config tslint-prettify.json --type-check --fix",
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "env": {
      "es5": {
        "plugins": [
          "lodash",
          [
            "transform-rename-import",
            {
              "original": "lodash-es",
              "replacement": "lodash"
            }
          ],
          "transform-es2015-modules-commonjs"
        ]
      },
      "es2015": {
        "plugins": ["lodash"]
      }
    }
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": ["<rootDir>/node_modules/(?!lodash-es/.*)"],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "notify": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  }
}
