{
  "name": "observable-redux-json-api",
  "version": "1.0.0",
  "main": "lib/jsonapi.js",
  "module": "es/jsonapi.js",
  "jsnext:main": "es/jsonapi.js",
  "types": "index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Krister Kari",
    "url": "https://github.com/kristerkari/"
  },
  "files": ["es", "docs", "images", "lib", "src", "README.md", "index.d.ts"],
  "keywords": ["observable", "redux", "json", "api", "jsonapi"],
  "scripts": {
    "prerelease": "yarn build",
    "release": "npmpub",
    "build:es5":
      "rimraf lib && tsc --project config/build-tsconfig.json --outDir lib && BABEL_ENV=es5 babel lib --out-dir lib",
    "build:es2015":
      "rimraf es && tsc --project config/build-tsconfig.json --outDir es && BABEL_ENV=es2015 babel es --out-dir es",
    "build": "yarn build:es5 && yarn build:es2015",
    "tsc": "tsc --project tsconfig.json --noEmit",
    "tdd": "jest --watch",
    "test": "jest",
    "test:nocache": "jest --no-cache",
    "test:update": "jest -u",
    "lint": "tslint --project tsconfig.json",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^22.1.4",
    "@types/node": "^10.0.3",
    "@types/pluralize": "^0.0.28",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nock": "^9.2.3",
    "npmpub": "^3.1.0",
    "prettier": "^1.11.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.6",
    "rxjs-tslint-rules": "^4.0.2",
    "ts-jest": "^22.4.1",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2",
    "xmlhttprequest": "^1.8.0"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "object-path-immutable": "^1.0.1",
    "pluralize": "^7.0.0",
    "redux-actions": "^2.2.1"
  },
  "peerDependencies": {
    "redux": ">=3.0.0",
    "redux-thunk": ">=1.0.0",
    "rxjs": ">=5.0.0"
  },
  "lint-staged": {
    "**/*.{json,md}": ["prettier --write", "git add"],
    "**/*.ts": [
      "tslint --project tsconfig.json --config tslint-prettify.json --fix",
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "env": {
      "es5": {
        "plugins": ["transform-es2015-modules-commonjs"]
      },
      "es2015": {}
    }
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.(j|t)sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": ["<rootDir>/node_modules/(?!lodash-es/.*)"],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "notify": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    }
  },
  "prettier": {
    "trailingComma": "none",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true
  }
}
